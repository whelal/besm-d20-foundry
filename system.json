{
  "id": "besm-d20",
  "title": "BESM d20 System",
  "description": "A comprehensive system for playing Big Eyes Small Mouth d20 in Foundry VTT. Features character sheets, power/attribute/defect management, and BESM-specific mechanics.",
  "version": "0.0.2",
  "compatibility": {
    "minimum": "13",
    "verified": "13.330"
  },
  "manifest": "https://raw.githubusercontent.com/whelal/besm-d20-foundry/main/system.json",
  "download": "https://github.com/whelal/besm-d20-foundry/archive/main.zip",
  "url": "https://github.com/whelal/besm-d20-foundry",
  "authors": [
    {
      "name": "Nova & Contributors",
      "url": "https://github.com/whelal/besm-d20-foundry"
    }
  ],
  "esmodules": [
    "scripts/system.js"
  ],
  "styles": [
    "styles/system.css"
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "documentTypes": {
    "Actor": ["character", "npc"],
    "Item": ["power", "attribute", "defect", "skill", "equipment"]
  },
  "packs": [],
  "initiative": "1d20 + @abilities.dex.mod",
  "primaryTokenAttribute": "health",
  "secondaryTokenAttribute": "energy",
  "socket": true,
  "license": "MIT",
  "bugs": "https://github.com/whelal/besm-d20-foundry/issues",
  "changelog": "https://github.com/whelal/besm-d20-foundry/releases"
}