<form class="{{cssClass}} flexcol {{#if flags.besm-d20.compactMode}}compact-mode{{/if}}">
  <header class="sheet-header flexrow">
    <img class="profile" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="96" width="96"/>
    <div class="header-fields flexcol">
      <h1 class="charname">
  <input name="name" type="text" value="{{actor.name}}" placeholder="Character Name"/>
      </h1>
      <div class="header-meta grid header-grid">
        <div class="meta-field">
          <label>Character Points</label>
          <span class="meta-value">{{characterPoints.total}}</span>
        </div>
        <div class="meta-field">
          <label>Health</label>
          <div class="meta-split">
            <input type="number" name="system.health.value" value="{{numberValue system.health.value}}" data-dtype="Number"/>
            <span>/</span>
            <input type="number" name="system.health.max" value="{{numberValue system.health.max}}" data-dtype="Number"/>
          </div>
        </div>
        <div class="meta-field">
          <label>Energy</label>
          <div class="meta-split">
            <input type="number" name="system.energy.value" value="{{numberValue system.energy.value}}" data-dtype="Number"/>
            <span>/</span>
            <input type="number" name="system.energy.max" value="{{numberValue system.energy.max}}" data-dtype="Number"/>
          </div>
        </div>
        <div class="meta-field">
          <label>Defense</label>
          <input type="number" name="system.defense.value" value="{{numberValue system.defense.value}}" data-dtype="Number"/>
        </div>
        <div class="meta-field">
          <label>Base Movement</label>
          <div class="meta-split">
            <input type="number" name="system.movement.base" value="{{numberValue system.movement.base}}" data-dtype="Number"/>
            <span>+</span>
            <input type="number" name="system.movement.misc" value="{{numberValue system.movement.misc}}" data-dtype="Number"/>
            <span>=</span>
            <span class="meta-value">{{system.movement.total}}</span>
          </div>
        </div>
      </div>
    </div>
  </header>
  
  <div class="sheet-mode-toggle">
    <label>
      <input type="checkbox" name="flags.besm-d20.compactMode" {{checked flags.besm-d20.compactMode}} />
      Compact Mode
    </label>
  </div>

  <nav class="sheet-tabs tabs" data-group="primary">
  <a class="item" data-tab="main">Main</a>
  <a class="item" data-tab="skills">Skills</a>
  <a class="item" data-tab="powers">Powers</a>
  <a class="item" data-tab="attributes">Attributes</a>
  <a class="item" data-tab="defects">Defects</a>
  <a class="item" data-tab="equipment">Equipment</a>
  <a class="item" data-tab="bio">Biography</a>
  </nav>
  <section class="sheet-body content flexcol">
    <div class="tab" data-group="primary" data-tab="main">
      <section class="sheet-section section-top">
        <div class="grid grid-3col top-section">
          {{!-- Column 1: Character Information --}}
          <div class="panel char-info-panel">
            <h2 class="panel-title">Character Information</h2>
            <div class="form-field">
              <label>Player's Name</label>
              <input type="text" name="system.details.playerName" value="{{system.details.playerName}}"/>
            </div>
            <div class="form-field">
              <label>GM's Name</label>
              <input type="text" name="system.details.gmName" value="{{system.details.gmName}}"/>
            </div>
            <div class="form-row grid grid-2col">
              <div class="form-inline">
                <label>Start lvl.</label>
                <input type="number" name="system.details.startingLevel" value="{{numberValue system.details.startingLevel}}" data-dtype="Number"/>
              </div>
              <div class="form-inline">
                <label>Disc Pts</label>
                <input type="number" name="system.details.discretionaryPoints" value="{{numberValue system.details.discretionaryPoints}}" data-dtype="Number"/>
              </div>
            </div>
            <div class="class-grid">
              {{#each system._uiClasses as |class idx|}}
              <div class="class-row-compact">
                <label>Class</label>
                <input type="text" name="system.classes.{{idx}}.name" value="{{class.name}}" placeholder="Class"/>
                <span class="class-level-label">Lvl</span>
                <input type="number" name="system.classes.{{idx}}.level" value="{{numberValue class.level}}" data-dtype="Number"/>
              </div>
              {{/each}}
            </div>
            <div class="form-row grid grid-2col">
              <div class="form-inline">
                <label>Race</label>
                <input type="text" name="system.details.race" value="{{system.details.race}}"/>
              </div>
              <div class="form-inline">
                <label>Race CP</label>
                <input type="number" name="system.details.raceCost" value="{{numberValue system.details.raceCost}}" data-dtype="Number"/>
              </div>
            </div>
            <div class="form-row grid grid-2col">
              <div class="form-inline">
                <label>Size</label>
                <input type="text" name="system.details.size" value="{{system.details.size}}"/>
              </div>
              <div class="form-inline">
                <label>XP</label>
                <input type="number" name="system.experience" value="{{numberValue system.experience}}" data-dtype="Number"/>
              </div>
            </div>
            <div class="form-row grid grid-2col">
              <div class="form-inline">
                <label>Age</label>
                <input type="text" name="system.details.age" value="{{system.details.age}}"/>
              </div>
              <div class="form-inline">
                <label>Gender</label>
                <input type="text" name="system.details.gender" value="{{system.details.gender}}"/>
              </div>
            </div>
            <div class="form-row grid grid-2col">
              <div class="form-inline">
                <label>Height</label>
                <input type="text" name="system.details.height" value="{{system.details.height}}"/>
              </div>
              <div class="form-inline">
                <label>Weight</label>
                <input type="text" name="system.details.weight" value="{{system.details.weight}}"/>
              </div>
            </div>
            <div class="form-field">
              <label>Physical Description</label>
              <input type="text" name="system.details.appearance" value="{{system.details.appearance}}"/>
            </div>
          </div>

          {{!-- Column 2: Ability Scores --}}
          <div class="panel abilities-panel">
            <h2 class="panel-title">Ability Scores</h2>
            <table class="ability-table">
              <thead>
                <tr>
                  <th>Ability</th>
                  <th>Score</th>
                  <th>Modifier</th>
                  <th>Roll</th>
                </tr>
              </thead>
              <tbody>
                {{#each config.abilities as |abilityLabel abilityKey|}}
                {{#with (lookup ../system.abilities abilityKey) as |ability|}}
                <tr>
                  <td class="ability-name">{{abilityLabel}}</td>
                  <td><input type="number" name="system.abilities.{{abilityKey}}.value" value="{{numberValue ability.value}}" data-dtype="Number"/></td>
                  <td class="ability-mod">{{signedNumber ability.mod}}</td>
                  <td class="ability-roll"><a class="rollable" data-roll="1d20+{{ability.mod}}" data-label="{{abilityLabel}} Check"><i class="fas fa-dice-d20"></i></a></td>
                </tr>
                {{/with}}
                {{/each}}
              </tbody>
            </table>
            <div class="form-field">
              <label>Initiative Modifier</label>
              <input type="number" name="system.combat.initiativeMisc" value="{{numberValue system.combat.initiativeMisc}}" data-dtype="Number"/>
            </div>
            <div class="form-field">
              <label>Base Movement</label>
              <span class="meta-value">{{system.movement.base}}</span>
            </div>
          </div>

          {{!-- Column 3: Calculated Values --}}
          <div class="panel calculated-panel">
            <h2 class="panel-title">Calculated Values</h2>
            <table class="saves-table">
              <thead>
                <tr>
                  <th>Saving Throws</th>
                  <th>Total</th>
                  <th>Roll</th>
                </tr>
              </thead>
              <tbody>
                {{#with system.saves.fortitude as |fort|}}
                <tr>
                  <td>Fortitude</td>
                  <td>{{signedNumber fort.total}}</td>
                  <td class="save-roll"><a class="rollable" data-roll="1d20+{{fort.total}}" data-label="Fortitude Save"><i class="fas fa-dice-d20"></i></a></td>
                </tr>
                {{/with}}
                {{#with system.saves.reflex as |ref|}}
                <tr>
                  <td>Reflex</td>
                  <td>{{signedNumber ref.total}}</td>
                  <td class="save-roll"><a class="rollable" data-roll="1d20+{{ref.total}}" data-label="Reflex Save"><i class="fas fa-dice-d20"></i></a></td>
                </tr>
                {{/with}}
                {{#with system.saves.will as |will|}}
                <tr>
                  <td>Will</td>
                  <td>{{signedNumber will.total}}</td>
                  <td class="save-roll"><a class="rollable" data-roll="1d20+{{will.total}}" data-label="Will Save"><i class="fas fa-dice-d20"></i></a></td>
                </tr>
                {{/with}}
              </tbody>
            </table>
            <h3 class="subsection-title">Combat Modifiers</h3>
            <table class="combat-summary">
              <tbody>
                <tr>
                  <td>Base Attack Bonus</td>
                  <td><input type="number" name="system.combat.baseAttackBonus" value="{{numberValue system.combat.baseAttackBonus}}" data-dtype="Number"/></td>
                </tr>
                <tr>
                  <td>Armor Class</td>
                  <td>{{system.combat.armorClass}}</td>
                </tr>
              </tbody>
            </table>
            <div class="form-field">
              <label>Hit Points</label>
              <div class="meta-split">
                <span class="meta-value">{{system.health.value}}</span>
                <span>/</span>
                <span class="meta-value">{{system.health.max}}</span>
              </div>
            </div>
            <div class="form-field">
              <label>Shock Value</label>
              <input type="number" name="system.combat.shockValue" value="{{numberValue system.combat.shockValue}}" data-dtype="Number"/>
            </div>
            <div class="form-field">
              <label>Energy Points</label>
              <div class="meta-split">
                <span class="meta-value">{{system.energy.value}}</span>
                <span>/</span>
                <span class="meta-value">{{system.energy.max}}</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="sheet-section section-details">
        <h2 class="section-title">Detailed Stats</h2>
        <div class="grid grid-2col">
          <div class="panel">
            <h3 class="panel-title">Saving Throws (Detailed)</h3>
            <table class="saves-table">
              <thead>
                <tr>
                  <th>Save</th>
                  <th>Base</th>
                  <th>Ability</th>
                  <th>Misc</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                {{#with system.saves.fortitude as |fort|}}
                <tr>
                  <td>Fortitude</td>
                  <td><input type="number" name="system.saves.fortitude.base" value="{{numberValue fort.base}}" data-dtype="Number"/></td>
                  <td>{{signedNumber fort.abilityMod}}</td>
                  <td><input type="number" name="system.saves.fortitude.misc" value="{{numberValue fort.misc}}" data-dtype="Number"/></td>
                  <td>{{signedNumber fort.total}}</td>
                </tr>
                {{/with}}
                {{#with system.saves.reflex as |ref|}}
                <tr>
                  <td>Reflex</td>
                  <td><input type="number" name="system.saves.reflex.base" value="{{numberValue ref.base}}" data-dtype="Number"/></td>
                  <td>{{signedNumber ref.abilityMod}}</td>
                  <td><input type="number" name="system.saves.reflex.misc" value="{{numberValue ref.misc}}" data-dtype="Number"/></td>
                  <td>{{signedNumber ref.total}}</td>
                </tr>
                {{/with}}
                {{#with system.saves.will as |will|}}
                <tr>
                  <td>Will</td>
                  <td><input type="number" name="system.saves.will.base" value="{{numberValue will.base}}" data-dtype="Number"/></td>
                  <td>{{signedNumber will.abilityMod}}</td>
                  <td><input type="number" name="system.saves.will.misc" value="{{numberValue will.misc}}" data-dtype="Number"/></td>
                  <td>{{signedNumber will.total}}</td>
                </tr>
                {{/with}}
              </tbody>
            </table>
          </div>
          <div class="panel">
            <h3 class="panel-title">Combat Details</h3>
            <table class="combat-table">
              <tbody>
                <tr>
                  <th>Base Attack Bonus</th>
                  <td><input type="number" name="system.combat.baseAttackBonus" value="{{numberValue system.combat.baseAttackBonus}}" data-dtype="Number"/></td>
                  <th>Melee Attack</th>
                  <td>{{signedNumber system.combat.meleeTotal}}</td>
                </tr>
                <tr>
                  <th>Ranged Attack</th>
                  <td>{{signedNumber system.combat.rangedTotal}}</td>
                  <th>Initiative</th>
                  <td>
                    <div class="meta-split">
                      <input type="number" name="system.combat.initiativeMisc" value="{{numberValue system.combat.initiativeMisc}}" data-dtype="Number"/>
                      <span>=</span>
                      <span class="meta-value">{{signedNumber system.combat.initiativeTotal}}</span>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th>Armor Class</th>
                  <td>
                    <div class="meta-split">
                      <input type="number" name="system.armor.value" value="{{numberValue system.armor.value}}" data-dtype="Number"/>
                      <span>+</span>
                      <input type="number" name="system.combat.defenseMisc" value="{{numberValue system.combat.defenseMisc}}" data-dtype="Number"/>
                      <span>=</span>
                      <span class="meta-value">{{system.combat.armorClass}}</span>
                    </div>
                  </td>
                  <th>Shock Value</th>
                  <td><input type="number" name="system.combat.shockValue" value="{{numberValue system.combat.shockValue}}" data-dtype="Number"/></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <section class="sheet-section section-traits">
  <h2 class="section-title">Attributes, Feats, Skills & Defects</h2>
        <div class="grid grid-2col trait-grid">
          <div class="panel">
            <div class="panel-header">
              <h3>Attributes & Feats</h3>
              <div class="panel-controls">
                <a class="item-control item-create" data-type="power" title="Create Item">+ Power</a>
                <a class="item-control item-create" data-type="attribute" title="Create Item">+ Attribute</a>
              </div>
            </div>
            <ol class="items-list">
              {{#each powers as |item|}}
              <li class="item flexrow" data-item-id="{{#if item.id}}{{item.id}}{{else}}{{item._id}}{{/if}}">
                <div class="item-name">
                  <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                  <h4>{{item.name}}</h4>
                </div>
                <div class="item-rank">{{item.system.rank}}</div>
                <div class="item-cost">{{item.system.totalCost}}</div>
                <div class="item-controls">
                  <a class="item-control item-activate" title="Activate"><i class="fas fa-magic"></i></a>
                  <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                  <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                </div>
              </li>
              {{/each}}
              {{#each attributes as |item|}}
              <li class="item flexrow" data-item-id="{{#if item.id}}{{item.id}}{{else}}{{item._id}}{{/if}}">
                <div class="item-name">
                  <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                  <h4>{{item.name}}</h4>
                </div>
                <div class="item-rank">{{item.system.rank}}</div>
                <div class="item-cost">{{item.system.totalCost}}</div>
                <div class="item-controls">
                  <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                  <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                </div>
              </li>
              {{/each}}
              {{#unless powers.length}}
              {{#unless attributes.length}}
              <li class="item empty">No attributes or feats yet</li>
              {{/unless}}
              {{/unless}}
            </ol>
          </div>
          <div class="panel">
            <div class="panel-header">
              <h3>Defects</h3>
              <div class="panel-controls">
                <a class="item-control item-create" data-type="defect" title="Create Item">+ Defect</a>
              </div>
            </div>
            <ol class="items-list">
              {{#each defects as |item|}}
              <li class="item flexrow" data-item-id="{{#if item.id}}{{item.id}}{{else}}{{item._id}}{{/if}}">
                <div class="item-name">
                  <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                  <h4>{{item.name}}</h4>
                </div>
                <div class="item-cost">{{item.system.totalBonus}}</div>
                <div class="item-controls">
                  <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                  <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                </div>
              </li>
              {{/each}}
              {{#if (eq defects.length 0)}}
              <li class="item empty">No defects recorded</li>
              {{/if}}
            </ol>
            <h3 class="panel-title skills-title">Skills</h3>
            <table class="skills-summary">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Ability</th>
                  <th>Rank</th>
                  <th>Ability Mod</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                {{!-- Iterate configured skills to avoid stray/legacy keys showing as blanks --}}
                {{#each config.skills as |label key|}}
                {{#with (lookup ../system.skills key) as |skill|}}
                <tr>
                  <td>{{label}}</td>
                  <td>{{lookup ../../config.abilities skill.ability}}</td>
                  <td>{{numberValue skill.rank}}</td>
                  <td>{{signedNumber skill.abilityMod}}</td>
                  <td>{{signedNumber skill.total}}</td>
                </tr>
                {{/with}}
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <section class="sheet-section section-notes">
  <h2 class="section-title">Possessions & Notes</h2>
        <textarea name="system.notes">{{system.notes}}</textarea>
      </section>
    </div>

    {{!-- Skills Tab --}}
    <div class="tab" data-group="primary" data-tab="skills">
  <h3 class="items-header">Skills</h3>
      <table class="skills-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Ability</th>
            <th>Rank</th>
            <th>Ability Mod</th>
            <th>Race/Feat</th>
            <th>Misc</th>
            <th>Total</th>
            <th>Roll</th>
          </tr>
        </thead>
        <tbody>
          {{!-- Drive rendering from configured skill list for consistency and to avoid blanks --}}
          {{#each config.skills as |label key|}}
          {{#with (lookup ../system.skills key) as |skill|}}
          <tr class="skill-row" data-skill="{{../key}}">
            <td>
              <div class="skill-name-cell">
                <a class="skill-spec-toggle" data-skill="{{../key}}" title="Show Specializations"><i class="fas fa-chevron-right"></i></a>
                <a class="skill-spec-toggle skill-name" data-skill="{{../key}}" title="Show Specializations">{{label}}</a>
                <span class="spec-chip-group">
                  {{#each skill.specializations as |spec sIdx|}}
                    {{#if (lt sIdx 2)}}
                      <span class="spec-chip">{{spec.name}} {{signedNumber spec.bonus}}</span>
                    {{/if}}
                  {{/each}}
                  {{#if (gt skill.specializations.length 2)}}
                    <span class="spec-chip more">+{{sub skill.specializations.length 2}} more</span>
                  {{/if}}
                  <a class="spec-chip spec-chip-add" data-skill="{{../key}}" title="Add specialization"><i class="fas fa-plus"></i></a>
                </span>
              </div>
            </td>
            <td>
              <select name="system.skills.{{key}}.ability">
                {{#each ../../config.abilities as |al abKey|}}
                <option value="{{abKey}}" {{#if (eq abKey skill.ability)}}selected{{/if}}>{{al}}</option>
                {{/each}}
              </select>
            </td>
            <td><input type="number" name="system.skills.{{key}}.rank" value="{{numberValue skill.rank}}" data-dtype="Number"/></td>
            <td>{{signedNumber skill.abilityMod}}</td>
            <td><input type="number" name="system.skills.{{key}}.raceFeat" value="{{numberValue skill.raceFeat}}" data-dtype="Number"/></td>
            <td><input type="number" name="system.skills.{{key}}.misc" value="{{numberValue skill.misc}}" data-dtype="Number"/></td>
            <td>{{signedNumber skill.total}}</td>
            <td class="skill-roll"><a class="rollable" data-roll="1d20+{{skill.total}}" data-label="{{label}} Check"><i class="fas fa-dice-d20"></i></a></td>
          </tr>
          <tr class="skill-spec-row" data-skill="{{../key}}">
            <td colspan="8">
              <div class="skill-specs pill-list">
                {{#with (lookup ../../system.skills key) as |s|}}
                {{#each s.specializations as |spec sIdx|}}
                <div class="spec-pill">
                  <input type="text" class="spec-name" name="system.skills.{{../../key}}.specializations.{{sIdx}}.name" value="{{spec.name}}" placeholder="Specialization"/>
                  <span class="plus">+</span>
                  <input type="number" class="spec-bonus" name="system.skills.{{../../key}}.specializations.{{sIdx}}.bonus" value="{{numberValue spec.bonus}}" data-dtype="Number"/>
                  <a class="rollable" title="Roll {{../../label}} ({{spec.name}})" data-roll="1d20+{{s.total}}+{{numberValue spec.bonus}}" data-label="{{../../label}} ({{spec.name}}) Check"><i class="fas fa-dice-d20"></i></a>
                  <a class="spec-remove" data-skill="{{../../key}}" data-index="{{sIdx}}" title="Delete"><i class="fas fa-times"></i></a>
                </div>
                {{/each}}
                {{/with}}
                <a class="spec-add" data-skill="{{key}}"><i class="fas fa-plus-circle"></i> Add</a>
              </div>
            </td>
          </tr>
          {{/with}}
          {{/each}}
        </tbody>
      </table>
    </div>

    {{!-- Powers Tab --}}
    <div class="tab" data-group="primary" data-tab="powers">
      <div class="items-header flexrow">
  <h3>Powers</h3>
  <a class="item-control item-create" title="Create Item" data-type="power"><i class="fas fa-plus"></i> Add</a>
      </div>
      <ol class="items-list">
        <li class="item-header flexrow">
          <div class="item-name">Name</div>
          <div class="item-rank">Rank</div>
          <div class="item-cost">Total Cost</div>
          <div class="item-controls"></div>
        </li>
        {{#each powers as |item|}}
  <li class="item flexrow" data-item-id="{{#if item.id}}{{item.id}}{{else}}{{item._id}}{{/if}}">
          <div class="item-name">
            <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
            <h4>{{item.name}}</h4>
          </div>
          <div class="item-rank">{{item.system.rank}}</div>
          <div class="item-cost">{{item.system.totalCost}}</div>
          <div class="item-controls">
            <a class="item-control item-activate" title="Activate"><i class="fas fa-magic"></i></a>
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </li>
  {{/each}}
      </ol>
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab" data-group="primary" data-tab="attributes">
      <div class="items-header flexrow">
  <h3>Attributes</h3>
  <a class="item-control item-create" title="Create Item" data-type="attribute"><i class="fas fa-plus"></i> Add</a>
      </div>
      <ol class="items-list">
        <li class="item-header flexrow">
          <div class="item-name">Name</div>
